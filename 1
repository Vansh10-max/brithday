    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f7f7f7;
            font-family: Arial, sans-serif;
        }
        .container {
            text-align: center;
        }
        h1 {
            font-size: 3rem;
            color: #FF4081;
        }
        p {
            font-size: 1.5rem;
        }
        .confetti {
            position: absolute;
            width: 10px;
            height: 10px;
            background-color: #FF4081;
            animation: fall 5s infinite;
        }
        @keyframes fall {
            to {
                transform: translateY(100vh);
                opacity: 0;
            }
        }
    </style>
